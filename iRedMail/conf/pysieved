# Variables for pysieved.

export PYSIEVED_INI='/etc/pysieved.ini'
export PYSIEVED_PORT='2000'    # default is '2000'

# Directory to store sieve filter rule files.
export PYSIEVED_RULE_DIR='.sieve'

# We will run pysieved service as vmail user/group, but they can write
# pid file under '/var/run/', so we create a subdirectory for this
# purpose.
export PYSIEVED_PIDFILE='/var/run/pysieved/pysieved.pid'
