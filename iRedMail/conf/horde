#!/bin/sh

# Author: Zhang Huangbin (michaelbibby <at> gmail.com)

# Variables for horde-webmail and related.

# ---- Horde WebMail ----
export HORDE_VERSION='1.2'
export HORDE_TARBALL="horde-webmail-${HORDE_VERSION}.tar.gz"

export HORDE_HTTPD_ROOT='/var/www/html/horde'

# Database setting.
export HORDE_DB_NAME="horde"
export HORDE_DB_USER="horde"
export HORDE_DB_PASSWD="$(${GENERATE_MD5_PASSWD} $RANDOM\$$RANDOM\@$RANDOM\!$RANDOM\&$RANDOM\*$RANDOM\)$RANDOM)"
export HORDE_DB_TEMPLATE="${HORDE_HTTPD_ROOT}/scripts/sql/groupware.mysql.sql"

# Turba: Horde Contact Management Application.
export HORDE_TURBA_CONFIG_DIR="${HORDE_HTTPD_ROOT}/turba/config"

# Ingo: Horde Email Filter Rules Manager.
export HORDE_INGO_CONFIG_DIR="${HORDE_HTTPD_ROOT}/ingo/config"

# Default language of user interface.
#   en_US: English(US)
#   zh_CN: Simp Chinese.
#   zh_TW: Tradition Chinese.
export HORDE_DEFAULT_LANGUAGE='zh_CN'
