<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE template SYSTEM "template.dtd">
<!--
    For iRedMail (Mail Server Solution for Red Hat series).
    Project: http://iRedMail.googlecode.com/
    Author: Zhang Huangbin (michaelbibby <at> gmail.com)
-->
<template>
<title>Virtual Mail User</title>
<icon>images/user.png</icon>
<description>New Mail Account</description>
<askcontainer>1</askcontainer>
<rdn>mail</rdn>
<visible>1</visible>

<objectClasses>
    <objectClass id="mailUser"></objectClass>
    <objectClass id="inetOrgPerson"></objectClass>
</objectClasses>

<attributes>
    <attribute id="mail">
        <display>Mail Address</display>
        <images>images/mail.png</images>
        <hint>Examples: www@example.com</hint>
        <order>1</order>
        <page>1</page>
    </attribute>

    <attribute id="userPassword">
        <display>User Password</display>
        <images>images/lock.png</images>
        <type>password</type>
        <verify>1</verify>
        <helper>
            <display>Encryption</display>
            <id>enc</id>
            <option>blowfish</option>
            <option>clear</option>
            <option>crypt</option>
            <option>ext_des</option>
            <option>md5</option>
            <option>md5crypt</option>
            <option>sha</option>
            <option>smd5</option>
            <option>ssha</option>
            <value>md5</value>
        </helper>
        <post>=php.Password(%enc%,%userPassword%)</post>
        <order>2</order>
        <page>1</page>
    </attribute>

    <attribute id="accountStatus">
        <display>Account Status</display>
        <images>images/star.png</images>
        <option>active</option>
        <option>disabled</option>
        <value>active</value>
        <order>3</order>
        <page>1</page>
    </attribute>

    <attribute id="homeDirectory">
        <display>Home Directory of vmail user. Example: /home/vmail</display>
        <hint>Example: /home/vmail</hint>
        <icon>images/home.png</icon>
        <value>/home/vmail</value>
        <order>4</order>
        <page>1</page>
    </attribute>

    <attribute id="mailMessageStore">
        <display>Mail Message Store. Example: domain.com/username/</display>
        <hint>Example: domain.com/username/</hint>
        <images>images/folder.png</images>
        <order>5</order>
        <page>1</page>
    </attribute>

    <attribute id="mailQuota">
        <display>Mail Quota. Example: 10240 (== 10M)</display>
        <hint>Example: 10240</hint>
        <images>images/hard-drive.png</images>
        <value>10240</value>
        <order>6</order>
        <page>1</page>
    </attribute>

    <attribute id="cn">
        <display>Comman Name. Example: Zhang Huangbin</display>
        <hint>Example: Zhang Huangbin</hint>
        <images>images/user.png</images>
        <order>7</order>
        <page>1</page>
    </attribute>

    <attribute id="sn">
        <display>SurName. Example: Zhang Huangbin</display>
        <hint>Example: Zhang Huangbin</hint>
        <order>8</order>
        <page>1</page>
    </attribute>

    <attribute id="uid">
        <display>User ID. Example: zhanghuangbin</display>
        <hint>Example: zhanghuangbin</hint>
        <images>images/uid.png</images>
        <order>9</order>
        <page>1</page>
    </attribute>

    <attribute id="enablePOP3">
        <display>Permit to use POP3 service</display>
        <hint>Example: yes</hint>
        <images>images/uid.png</images>
        <order>10</order>
        <page>1</page>
        <option>yes</option>
        <option>no</option>
        <value>yes</value>
    </attribute>

    <attribute id="enableIMAP">
        <display>Permit to use IMAP service</display>
        <hint>Example: yes</hint>
        <images>images/uid.png</images>
        <order>11</order>
        <page>1</page>
        <option>yes</option>
        <option>no</option>
        <value>yes</value>
    </attribute>

    <attribute id="enableSMTP">
        <display>Permit to use SMTP service</display>
        <hint>Example: yes</hint>
        <images>images/uid.png</images>
        <order>12</order>
        <page>1</page>
        <option>yes</option>
        <option>no</option>
        <value>yes</value>
    </attribute>

    <attribute id="enableDELIVER">
        <display>Permit to receive email</display>
        <hint>Example: yes</hint>
        <images>images/uid.png</images>
        <order>13</order>
        <page>1</page>
        <option>yes</option>
        <option>no</option>
        <value>yes</value>
    </attribute>

    <attribute id="expiredDate">
        <description>Expired date</description>
        <display>Expired date</display>
        <hidden>1</hidden>
        <value>99991231000000</value>
        <order>14</order>
        <page>1</page>
    </attribute>


</attributes>
</template>

