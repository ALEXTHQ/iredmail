<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE template SYSTEM "template.dtd">
<!--
    For rhms (Mail Server Solution for Red Hat series).
    Project: http://code.google.com/p/redhatsolution/
    Author: Zhang Huangbin (michaelbibby <at> gmail.com)
-->
<template>
<title>Virtual Mail User</title>
<icon>images/mail_account.png</icon>
<description>New Mail Account</description>
<askcontainer>1</askcontainer>
<rdn>mail</rdn>
<visible>1</visible>

<objectClasses>
    <objectClass id="qmailUser"></objectClass>
    <objectClass id="inetOrgPerson"></objectClass>
</objectClasses>

<attributes>
    <attribute id="mail">
        <display>Mail Address</display>
        <icon>images/mail.png</icon>
        <hint>Examples: www@example.com</hint>
        <order>1</order>
        <page>1</page>
    </attribute>

    <attribute id="userPassword">
        <display>Password</display>
        <icon>images/lock.png</icon>
        <type>password</type>
        <verify>1</verify>
        <helper>
            <id>enc</id>
            <display>Encryption</display>
            <location>side</location>
            <default>md5</default>
            <value>blowfish</value>
            <value>clear</value>
            <value>crypt</value>
            <value>ext_des</value>
            <value>md5</value>
            <value>md5crypt</value>
            <value>sha</value>
            <value>smd5</value>
            <value>ssha</value>
        </helper>
        <post>=php.Password(%enc%,%userPassword%)</post>
        <order>2</order>
        <page>1</page>
    </attribute>

    <attribute id="accountStatus">
        <display>Account Status</display>
        <icon>images/star.png</icon>
        <value>active</value>
        <hint>'active' or 'disabled'</hint>
        <order>3</order>
        <page>1</page>
    </attribute>

    <attribute id="homeDirectory">
        <display>Home Directory</display>
        <icon>images/home.png</icon>
        <hint>Example: /home/vmail</hint>
        <value>/home/vmail</value>
        <order>4</order>
        <page>1</page>
    </attribute>

    <attribute id="mailMessageStore">
        <display>Mail Message Store</display>
        <hint>Example: domain.com/username/</hint>
        <icon>images/folder.png</icon>
        <order>5</order>
        <page>1</page>
    </attribute>

    <attribute id="mailQuota">
        <display>Mail Quota</display>
        <hint>Example: 10240(10M)</hint>
        <icon>images/hard-drive.png</icon>
        <value>10240</value>
        <order>6</order>
        <page>1</page>
    </attribute>

    <attribute id="cn">
        <display>Comman Name</display>
        <hint>Example: Zhang Huangbin</hint>
        <icon>images/user.png</icon>
        <order>7</order>
        <page>1</page>
    </attribute>

    <attribute id="sn">
        <display>SurName</display>
        <hint>Example: Zhang Huangbin</hint>
        <order>8</order>
        <page>1</page>
    </attribute>

    <attribute id="uid">
        <display>User ID</display>
        <hint>Example: zhanghuangbin(Do *NOT* include space.)</hint>
        <icon>images/uid.png</icon>
        <order>9</order>
        <page>1</page>
    </attribute>

</attributes>
</template>
